#!/usr/bin/env ruby
# FIXME: No executables in lib!

require 'pathname'
$LOAD_PATH.unshift(Pathname.new(__FILE__).dirname.join("..").expand_path.to_s)
require 'init'
require 'bithug'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: bithug-cmd [options]"

  opts.on("--user=USER", String, "Username") do |u|
    options[:username] = u
  end

  opts.on("--add-key=KEY", String, "Add a key") do |k|
    options[:key] = k
  end

  opts.on("--add-repo=REPOSITORY", String, "Create a repo") do |r|
    options[:repo] = r
  end
end.parse!

exit if options[:username].nil?
user = User.find(:name => options[:username]) 
if user.empty? 
   puts "User #{options[:username]} not found, creating..."
   user = User.new(:name => options[:username])
else
   user = user.first
end
if options[:key] 
  Key.add(:user => user, :value => options[:key])
  puts "Added key #{options[:key]} to user #{user.name}."
end
if options[:repo] 
  repo = Repository.create(:owner => user, :name => options[:repo])
  puts "Created repo #{repo.name} for user #{repo.owner.name}"
end

